<h1>New Post</h1>

<%= form_with(model: @post) do |form| %>
  <div>
    <%= form.label :author %>
    <%= form.text_field :author, class: "form-input-width" %>
  </div>

  <div>
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-input-width" %>
  </div>

  <div>
    <%= form.label :image %>
    <%= form.text_field :image, class: "form-input-width" %>
  </div>

  <button>Submit</button>
<% end %>

<%= link_to "Back to Posts", posts_path %>
